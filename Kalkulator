#include <iostream>

using namespace std;

int main() {
    double a, b;
    char operacja;

    cout << "Prosty kalkulator C++" << endl;
    cout << "Wybierz operacje (+, -, *): ";
    cin >> operacja;

    cout << "Podaj pierwsza liczbe: ";
    cin >> a;

    cout << "Podaj druga liczbe: ";
    cin >> b;

    switch (operacja) {
        case '+':
            cout << "Wynik: " << a + b << endl;
            break;
     case '-':
            cout << "Wynik: " << a - b << endl;
            break;
    }
